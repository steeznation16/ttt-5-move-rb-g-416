#!/usr/bin/env ruby

require_relative '../lib/move.rb'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
def update_array_at_with(array, index, value)
  array[index] = value
end

update_array_at_with(board, 0, "X")
puts "Welcome to Tic Tac Toe!"
puts "Please enter 1-9:"
input = gets.strip

index = input_to_index(input)

move(board, index)
display_board(board)